<LblTxt@BoxLayout>:
    orientation: 'horizontal'      
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt  
        text: ''        

<MyLayout@BoxLayout>:  
    orientation: 'vertical'

    LblTxt:   
        id: lt0
        lblTxtIn: 'Firstname'

    LblTxt:   
        id: lt1
        lblTxtIn: 'Lastname'

    LblTxt:   
        id: lt2
        lblTxtIn: 'Username'


    Button:
        text: 'print LblTxtInput [0, 1, 2]'
        on_release: print(lt0.theTxt.text, lt1.theTxt.text, lt2.theTxt.text)

